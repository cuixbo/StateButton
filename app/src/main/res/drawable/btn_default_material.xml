<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="?attr/buttonCornerRadius"/>
            <stroke android:color="?attr/stroke_color_disabled" android:width="?attr/stroke_width_disabled"/>
            <solid android:color="?attr/background_disabled"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="?attr/buttonCornerRadius"/>
            <stroke android:color="?attr/stroke_color_pressed" android:width="?attr/stroke_width_pressed"/>
            <solid android:color="?attr/background_pressed"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="?attr/buttonCornerRadius"/>
            <stroke android:color="?attr/stroke_color_normal" android:width="?attr/stroke_width_normal"/>
            <solid android:color="?attr/background_normal"/>
        </shape>
    </item>
</selector>