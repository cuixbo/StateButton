<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="buttonCornerRadius" format="dimension|reference"/>
    <attr name="buttonStrokeWidth" format="dimension|reference"/>
    <attr name="colorButtonStrokeNormal" format="color|reference"/>
    <attr name="background_normal" format="color|reference"/>
    <attr name="background_pressed" format="color|reference"/>
    <attr name="background_disabled" format="color|reference"/>
    <attr name="stroke_width_normal" format="dimension|reference"/>
    <attr name="stroke_width_pressed" format="dimension|reference"/>
    <attr name="stroke_width_disabled" format="dimension|reference"/>
    <attr name="stroke_color_normal" format="color|reference"/>
    <attr name="stroke_color_pressed" format="color|reference"/>
    <attr name="stroke_color_disabled" format="color|reference"/>
    <attr name="animation_duration" format="integer|reference"/>
    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="textColor_normal" format="color|reference"/>
        <attr name="textColor_pressed" format="color|reference"/>
        <attr name="textColor_disabled" format="color|reference"/>
        <!--stroke width and color, dash width, dash gap-->
        <attr name="stroke_dash_width" format="dimension|reference"/>
        <attr name="stroke_dash_gap" format="dimension|reference"/>
        <attr name="stroke_width_normal"/>
        <attr name="stroke_width_pressed"/>
        <attr name="stroke_width_disabled"/>
        <attr name="stroke_color_normal"/>
        <attr name="stroke_color_pressed"/>
        <attr name="stroke_color_disabled"/>
        <!--background color-->
        <attr name="background_normal"/>
        <attr name="background_pressed"/>
        <attr name="background_disabled"/>
        <!--background radius-->
        <attr name="radius" format="dimension|reference"/>
        <attr name="round" format="boolean|reference"/>
        <!--animation duration-->
        <attr name="animation_duration"/>
    </declare-styleable>
    <declare-styleable name="StateImageView">
        <attr name="background_normal"/>
        <attr name="background_pressed"/>
        <attr name="background_disabled"/>
        <!--animation duration-->
        <attr name="animation_duration"/>
    </declare-styleable>
</resources>
